<div class="column is-3 is-offset-1 has-border-gray">
  <h3 class="title is-5 has-text-grey-light">Channels</h3>

  <ul class="list">
    <% @channels.each do |c| %>
    <li><%= link_to c.channel, c %></li>
    <% end %>
  </ul>

  <br/>

  <% if current_user.superadmin == true %>
    <%= link_to 'New Channel', new_channel_path, class:'button is-info' %>
    <%= link_to 'Show Channels', channels_path, class:'button is-link is-outlined' %>
  <% elsif current_user.admin == true %>
    <%= link_to 'Show Channels', channels_path, class:'button is-link is-outlined' %>
  <% end %>

</div>